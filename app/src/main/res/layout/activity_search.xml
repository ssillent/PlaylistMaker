<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultLayout"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        style="@style/DefaultLayout"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="@dimen/pad16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp">

            <ImageView
                android:id="@+id/SearchBackButton"
                style="@style/ButtonBack"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="10dp" />
 />
        <TextView
            style="@style/PrimaryTextBlack"
            android:text="@string/search"
            android:layout_marginBottom="@dimen/pad16"
            android:layout_marginTop="4dp"
            />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">
        <EditText
            android:id="@+id/SearchEditText"
            style="@style/SearchEditText"
            />

            <ImageView
                android:id="@+id/clearButton"
                style="@style/ClearTextButton" />
        </FrameLayout>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ProgressBar android:id="@+id/progressbar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:indeterminateTint="@color/YpBlue"
            android:visibility="gone"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <LinearLayout
            android:id="@+id/NoInternet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="120dp">

            <ImageView
                style="@style/PlaceholderIcInternetError"/>

            <TextView
                style="@style/SearchPlaceholderText"
                android:text="@string/NoConnection"/>

            <TextView
                style="@style/SearchPlaceholderText"
                android:text="@string/LoadFailed"/>

            <Button
                android:id="@+id/updateButton"
                style="@style/UpdateButton" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/NothingFound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="120dp">

            <ImageView
                style="@style/PlaceholderIc"/>

            <TextView
                style="@style/SearchPlaceholderText"
                android:text="@string/NothingFound" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/SearchHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="45dp"
>

            <TextView
                style="@style/PrimaryTextBlack"
                android:text="@string/YouSearch"
                android:textSize="19sp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchHistoryRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="24dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <Button
                android:id="@+id/clearHistoryButton"
                style="@style/ClearHistoryButton"
                android:text="@string/ClearHistory"
                android:layout_gravity="center"/>

        </LinearLayout>

    </FrameLayout>


    </LinearLayout>