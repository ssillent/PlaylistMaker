<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal"
    android:paddingHorizontal="13dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/track_icon"
        android:layout_width="@dimen/track_icon_size"
        android:layout_height="@dimen/track_icon_size"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/track_name"
            style="@style/TrackName"
            tools:text="Название трека"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/track_author"
                style="@style/AuthorName"
                tools:text="Исполнитель"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ChangeColorToDarkMode"
                android:src="@drawable/dot_ic"
                />

            <TextView
                android:id="@+id/track_time"
                style="@style/TrackTime"
                tools:text="3:45"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_marginRight="7dp"
        style="@style/ChangeColorToDarkMode"
        android:src="@drawable/vector6" />

</LinearLayout>